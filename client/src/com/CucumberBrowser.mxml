					<s:VerticalLayout gap="0" horizontalAlign="center"/>
				</s:layout>
				<s:HGroup paddingTop="20">
					<s:VGroup id="defined" width="100%" height="100%">
						<s:HGroup id="names_group" width="100%" height="10%">
						</s:HGroup>
